<%# Render the new/edit doctor form in a card %>
<div>
  <div class="card-header">
  	<p class="card-text text-center">Edit Doctor Profile</p>
  </div>
  <div class="card-body">
    <%= render "form", doctor: @doctor %>
  </div>
</div>

<%# Add a back button that redirects back to the show view for the doctor %>
<div class="container">
  <%= link_to "Back", @doctor, class: 'btn btn-dark px-5' %>
</div>