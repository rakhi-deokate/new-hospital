<%# Create a form for doctor that has placeholders %>
<%= form_with model: doctor do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :name, placeholder: "Name" %>
    <%= form.text_field :specialty,  placeholder: "Specialty" %>
  </div>

  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-info mb-3" %>
  </div>
<% end %>