<%# Check if there are any patients %>
<% if @patients.empty? %>
  <%# If the patients array is empty, make user aware with a card %>
  <div>
    <div class="card-header text-center">
      <p class="card-text" style="color:green;">No patients added...</p>
    </div>
  </div>
<% else %>

  <div>
    <div class="card-header text-center">
      <b>Current Patients</b>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @patients.each do |patient| %>
          <%= link_to patient.name, patient, class: "list-group-item list-group-item-action list-group-item-light" %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="card bg-light mb-3">
  <div class="card-header text-center" style="color:blue;">
  <h3>	Add Patient</h3>
  </div>
  <div class="card-body">
    <%= render "form", patient: Patient.new %>
  </div>
</div>
