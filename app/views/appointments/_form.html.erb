<%# Create a form for appointment that has placeholders %>
<%= form_with model: appointment do |form| %>
  <div class="form-group mb-3">
    <div class="row g-2">
      <div class="col">
        <%= form.collection_select :patient_id, Patient.all, :id, :name, {prompt: "Select Patient"} %>
      </div>
      <div class="col">
        <%= form.collection_select :doctor_id, Doctor.all, :id, :name, {prompt: "Select Doctor"} %>
      </div>
    </div>
    <div class="row g-2">
      <div class="col input-group mb-2">
        <span class="input-group-text"style="color:red;">Date</span>
        <%= form.date_field :date, class: "form-control" %>
      </div>
      <div class="col input-group mb-2">
        <span class="input-group-text" style="color:red;">Start Time</span>
        <%= form.time_field :start_time, class: "form-control" %>
      </div>
      <div class="col input-group mb-2">
        <span class="input-group-text "style="color:red;">End Time</span>
        <%= form.time_field :end_time, class: "form-control" %>
      </div>
    </div>
    <%= form.text_area :issue, class: "form-control", placeholder: "Describe issue", rows: "3" %>
  </div>

  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-warning mb-3" %>
  </div>
<% end %>